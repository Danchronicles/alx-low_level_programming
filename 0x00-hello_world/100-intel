#!/bin/bash

# Check if $CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "Please set the C file name using the CFILE variable."
    exit 1
fi

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
    echo "The C file '$CFILE' does not exist."
    exit 1
fi

# Determine the output file name with the .s extension
OUTPUT_FILE="${CFILE%.c}.s"

# Generate assembly code and save it to the output file
gcc -S -masm=intel "$CFILE" -o "$OUTPUT_FILE"

if [ $? -eq 0 ]; then
    echo "Assembly code generated and saved to '$OUTPUT_FILE'."
else
    echo "Error generating assembly code."
fi


